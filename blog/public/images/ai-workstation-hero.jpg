<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="1000" height="500" viewBox="0 0 1000 500">
  <defs>
    <linearGradient id="heroBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0c4a6e;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#075985;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0369a1;stop-opacity:1" />
    </linearGradient>
    
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1000" height="500" fill="url(#heroBg)"/>
  
  <!-- Motherboard representation -->
  <rect x="100" y="150" width="800" height="200" fill="#1e40af" stroke="#3b82f6" stroke-width="2" rx="10" opacity="0.3"/>
  
  <!-- GPU Slot -->
  <rect x="150" y="200" width="250" height="80" fill="#ef4444" stroke="#dc2626" stroke-width="3" rx="5"/>
  <text x="275" y="235" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="16" font-weight="bold" filter="url(#glow)">RTX 5090</text>
  <text x="275" y="255" text-anchor="middle" fill="#fecaca" font-family="Arial, sans-serif" font-size="12">32GB GDDR7</text>
  <text x="275" y="270" text-anchor="middle" fill="#fecaca" font-family="Arial, sans-serif" font-size="12">Blackwell</text>
  
  <!-- CPU Socket -->
  <rect x="500" y="180" width="120" height="120" fill="#f59e0b" stroke="#d97706" stroke-width="3" rx="5"/>
  <text x="560" y="230" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="14" font-weight="bold">AMD</text>
  <text x="560" y="245" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="14" font-weight="bold">9950X</text>
  <text x="560" y="260" text-anchor="middle" fill="#fef3c7" font-family="Arial, sans-serif" font-size="10">16C/32T</text>
  <text x="560" y="275" text-anchor="middle" fill="#fef3c7" font-family="Arial, sans-serif" font-size="10">Zen 5</text>
  
  <!-- RAM Slots -->
  <rect x="680" y="190" width="20" height="100" fill="#10b981" stroke="#059669" stroke-width="2" rx="2"/>
  <rect x="710" y="190" width="20" height="100" fill="#10b981" stroke="#059669" stroke-width="2" rx="2"/>
  <rect x="740" y="190" width="20" height="100" fill="#6b7280" stroke="#4b5563" stroke-width="2" rx="2" opacity="0.5"/>
  <rect x="770" y="190" width="20" height="100" fill="#6b7280" stroke="#4b5563" stroke-width="2" rx="2" opacity="0.5"/>
  
  <text x="730" y="180" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="11">128GB DDR5-6000</text>
  
  <!-- Storage -->
  <rect x="200" y="320" width="80" height="15" fill="#8b5cf6" stroke="#7c3aed" stroke-width="1" rx="2"/>
  <text x="240" y="345" text-anchor="middle" fill="#e9d5ff" font-family="Arial, sans-serif" font-size="9">990 Pro 2TB</text>
  
  <rect x="300" y="320" width="60" height="15" fill="#8b5cf6" stroke="#7c3aed" stroke-width="1" rx="2"/>
  <text x="330" y="345" text-anchor="middle" fill="#e9d5ff" font-family="Arial, sans-serif" font-size="9">990 EVO 1TB</text>
  
  <!-- Circuit traces -->
  <g stroke="#60a5fa" stroke-width="2" fill="none" opacity="0.6">
    <path d="M275,280 L275,320 L240,320"/>
    <path d="M560,300 L560,320 L330,320"/>
    <path d="M730,290 L730,310 L400,310 L400,240 L500,240"/>
  </g>
  
  <!-- Connection points -->
  <circle cx="275" cy="320" r="3" fill="#60a5fa"/>
  <circle cx="560" cy="320" r="3" fill="#60a5fa"/>
  <circle cx="730" cy="310" r="3" fill="#60a5fa"/>
  
  <!-- Title -->
  <text x="500" y="80" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="32" font-weight="bold" filter="url(#glow)">AI Engineering Workstation</text>
  <text x="500" y="110" text-anchor="middle" fill="#bfdbfe" font-family="Arial, sans-serif" font-size="16">High-Performance Hardware Architecture</text>
  
  <!-- Power indicator -->
  <circle cx="850" cy="250" r="8" fill="#10b981" filter="url(#glow)">
    <animate attributeName="opacity" values="0.5;1;0.5" dur="2s" repeatCount="indefinite"/>
  </circle>
  <text x="870" y="255" fill="#ffffff" font-family="Arial, sans-serif" font-size="12">ACTIVE</text>
</svg>